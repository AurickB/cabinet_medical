<div class="col-md-8">
    <div class="row flex justify-content-start flex-wrap">
        {% for picture in articles.pictures %}
            <div class="col-4">
                <img id="image-edit" src="{{ vich_uploader_asset(picture, 'imageFile')}}" alt="card-img-top">
                {#
                                    <a href="{{ path('admin.picture.delete', {id: picture.id}) }}" class="btn btn-danger" data-delete data-token="{{ csrf_token('delete' ~ picture.id) }}">Supprimer</a>
                #}
                <form method="post" action="{{ path('admin.picture.delete', {id: picture.id}) }}" style="display: inline-block" onsubmit="return confirm('Ëtes vous sûr ?')">
                    {#On se protège contre les attaques csrf en générant un csrf token qu'on nomme 'delete' et lui concatène l'id du bien#}
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ picture.id) }}">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        {% endfor %}
    </div>
</div>
{{ form_start(form) }}
        {#Pour modifier le théme du formulaire se rendre dans config/packages/twig.yaml et rajouter form_themes[]
        Les différents thèmes se trouvent dans vendor/symfony/twig-bridge/Ressources/views/Form#}
<div class="row">
    <div class="col-md-12">{{ form_row(form.title) }}</div>
    <div class="col-md-12">{{ form_row(form.content) }}</div>
    <div class="col-md-4">{{ form_row(form.pictureFiles) }}</div>
</div>
{{ form_rest(form) }}
<button class="btn btn-primary">{{ button|default('Enregistrer') }}</button>
{{ form_end(form) }}