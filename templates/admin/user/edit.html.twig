{% extends 'base.html.twig' %}

{% block title 'Éditer un utilisateur' %}

{% block body %}

    <div class="container mt-4">
        <h1>Éditer un utilisateur</h1>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-4">{{ form_row(form.username) }}</div>
            <div class="col-md-4">{{ form_row(form.role) }}</div>
        </div>
        <div class="row">
            <div class="col-md-4">{{ form_row(form.unit) }}</div>
        </div>
        <div class="row">
            <div class="col-md-8">{{ form_row(form.password) }}</div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}